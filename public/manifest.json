{
  "short_name": "USBA",
  "name": "Unobtrusive Search Beahviour Analysis",
  "icons":
  {
    "16": "favicon.ico",
    "48": "logo192.png",
    "128": "logo512.png"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "desktopCapture",
    "webNavigation",
    "<all_urls>",
    "storage"
  ],
  "manifest_version": 3,
  "version": "0.9.2",
  "action": {
    "default_popup": "index.html",
    "default_title": "USBA"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["scripts/mouse-behaviour.js", "scripts/recorder.js", "scripts/downloader.js"]
      }
  ],
  "author": "@kevin.kraus@studium.uni-hamburg.de"
}
